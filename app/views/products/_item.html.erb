<tr data-id="<%= product.id %>">
  <%= data_td_list product,
    [:select_one, :code, "products[]"],
    t("dict.grades.#{product.grade}"),
    :code,
    [:brand_id, collection: brands_hash],
    :name,
    sales_status(product),
    [:color, color_tag(product.color)],
    :height, :width, :depth, :weight,
    [:price_zone, collection: t("dict.prices").invert()],
    :size_name, :case_pack_name, :barcode,
    [:supplier_id, collection: suppliers_hash],
    [:mfr_id, collection: mfrs_hash]
  %>
</tr>
