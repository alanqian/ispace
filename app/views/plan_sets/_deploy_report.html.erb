<%# plan_name(category), plan_note, published_at, to_deploy_at, download_link, downloaded_at, finish_button %>
<table
  data-sinfo="共_TOTAL_个规划"
  data-sinfoempty="无最新空间规划，重新搜索试试"
  class="dataTable grid-control no-wrap plan_sets editing" cellspacing=0>
  <thead>
    <tr>
      <th>规划</th>
      <th>说明</th>
      <th>计划日期</th>
      <th>下载时间</th>
      <th>完成上报</th>
    </tr>
  </thead>
  <tbody>
    <% deploys.each do |dp| %>
      <tr>
        <td>
          <%= dp.plan_set_name %><br>
          <small><%=dt_ago dp.published_at %>发布</small>
        </td>
        <td>
          <%= dp.plan_set_note %><br>
        </td>
        <td>
          <%= dp.to_deploy_at.to_s(:short) %>
        </td>
        <td>
          <%=dt_ago dp.downloaded_at.localtime %>
          <%= link_to "下载", plan_path(dp.plan_id, _do: :download_pdf), target: :_blank %>
        </td>
        <td>
          <%= link_to  "完成部署", plan_path(dp.plan_id, deployed: dp.id, "plan[_do]" => :deploy), method: :put %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
