<table id="regions-table" data-form="#regions-form" data-sinfoempty="请重新选择品类或重新搜索"
  class="dataTable grid-control no-wrap resizable inplace_edit" cellspacing=0>
  <thead>
    <tr>
      <%= data_th_list :region,
                       :code,
                       :name,
                       :consume_type,
                       [ :memo, sort: false ]
      %>
    </tr>
  </thead>

  <tbody>
    <% regions.each do |region| %>
      <%= render 'item', region: region %>
    <% end %>
  </tbody>
</table>
