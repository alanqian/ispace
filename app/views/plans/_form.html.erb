  <div class="inputs">
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :plan_set_id %>
    <%= f.hidden_field :category_id %>
    <%= f.input :store_id, collection: @model_stores_all, disabled: @plan.id != nil %>
    <%= f.input :init_facing %>
    <div id="store-info">
      <li>requries json data: store_id =&gt; [StoreInfoText, FixtureInfoText]
      <li>Selected store info: location, area, refer_count, region.name</li>
      <li>Fixture info of sample store</li>
    </div>
