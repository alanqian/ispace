<h1>Listing stores</h1>

<div id="stores-list">
  <%= simple_form_for(store_new, method: "patch", remote: true,
                      data: { url: store_path(store_new) },
                      html: { id: "stores-form", class: "inplace" }) do |f| %>
    <div class="inputs">
      <%= f.input :name %>
      <%= f.input :region_id, collection: Region.all %>
      <%= f.input :code  %>
      <%= f.input :area %>
      <%= f.input :location  %>
      <%= f.input :ref_store_id  %>
      <%= f.input :memo %>
    </div>
  <% end %>

  <%= render 'list', stores: @stores %>
</div>

<br>

<%= link_to 'New Store', new_store_path %>
