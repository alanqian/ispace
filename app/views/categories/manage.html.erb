<%= form_tag categories_bulk_update_path :method => :post do %>
  <%= hidden_field_tag 'page', (params[:page].nil? ? 1 : params[:page]) %>
  <table class='table table-striped table-condensed'>
  <thead>
  <tr><th>ID</th><th>Name</th><th>Parent</th><th>Memo</th></tr>
  </thead>
  <tbody>
  <% @categories.each do |item| %>
    <%= fields_for "categories[]", item do |f| %>
      <%= render :partial => 'form_mngr', :locals => {:f => f, :category => item} %>
    <% end %>
  <% end %>
  </tbody>
  </table>
  <p><%= submit_tag "Update All", :class => 'btn btn-success' %></p>
<% end %>

<p><%= will_paginate @categories %></p>

