<div id="ref_store">
  <h3>货架配置表</h3>
  <%# store_id, code, category_id %>
  <table id="bays-table"
    data-sinfoempty="请重新搜索或新建货备"
    class="dataTable grid-control no-wrap" cellspacing=0>
    <thead>
      <tr>
        <%=data_th_list :store_fixture,
          :store_id,
          :category_id,
          :code,
          ["", sort: false]
        %>
      </tr>
    </thead>
    <tbody>
      <% fixture.store_fixtures.each do |sf| %>
        <tr data-id="<%= sf.id %>">
          <%= data_td_list sf,
            store_dict[sf.store_id],
            category_dict[sf.category_id],
            :code,
            link_to("撤销", fixture_path(fixture, "fixture[_do]" => :undeploy, sf: sf.id), method: :put, data: { confirm: "撤销门店货架？"})
          %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @do == :deploy %>
    <h3>
    <a id="deploy_new">配置到...</a>
    </h3>
    <%= simple_form_for(fixture, html: { class: 'edit_fixture_deploy span4' }) do |f| %>
      <%= field_set_tag '' do %>
        <%= f.input :_do, as: :hidden, input_html: { value: "deploy" } %>
        <%= f.simple_fields_for(:store_fixtures, @store_fixture_new, child_index: "100") do |fb| %>
          <%= fb.input :fixture_id, as: :hidden %>
          <%= fb.input :store_id, as: :select, collection: @model_stores_all %>
          <%= fb.input :category_id, as: :tree, class: "category-name",
            cmd: "select-category" %>
          <%= fb.input :code %>
        <% end %>
        <%= f.submit "加配置" %>
      <% end %>
    <% end %>
  <% end %>
</div>

<% if @do == :deploy %>
  <div id="dataTable-filter">
    <%= link_to '配置到门店', "#deploy_new" %>
  </div>
<% end %>
<%= category_menu "select-category" %>

